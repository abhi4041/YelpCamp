<% include ./partials/header.ejs %>

<div class="ui main text container segment">
  <div class="ui huge header">Editing...<em style="color: #6B6B6B"><%= campground.name %></em></div>
  <form class="ui form" action="/campgrounds/<%= campground.id %>?_method=PUT" method="POST">
    <div class="field">
      <label>Name</label>
      <input type="text" name="campground[name]" value="<%= campground.name %>">
    </div>
    <div class="field">
      <label>Location</label>
      <input type="text" name="campground[location]" value="<%= campground.location %>">
    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" name="campground[image]" value="<%= campground.image %>">
    </div>
    <div class="field">
      <label>Description</label>
      <textarea name="campground[desc]"><%= campground.desc %></textarea>
    </div>
    <button class="ui violet basic button" type="submit">Submit</button>
  </form>
</div>

<% include ./partials/footer.ejs %>
